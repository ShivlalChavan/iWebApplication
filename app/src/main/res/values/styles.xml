<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>

        //Navigation Drawer Selector background Color
        <item name="colorControlHighlight">@color/gray</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:activatedBackgroundIndicator">@color/colorPrimary</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item><!-- Whatever color you want-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="spinner_style" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawable">@drawable/drawable_spinner_background</item>
    </style>

</resources>